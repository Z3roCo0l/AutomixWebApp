<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Automix"] - Automix Restaurant</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/AutomixMVC.styles.css" asp-append-version="true" />
</head>
<body>
    <header>
        <div class="logo"><img src="~/Images/Icons/logo_black.png" alt="logo" /></div>
        <nav>
            <a href="#home">Home</a>
            <a href="#about">About</a>
            <a href="#cellar">Pince</a>
            <a href="#gallery">Gallery</a>
            <a href="#alacarte">A'la Carte</a>
            <a href="#pizza">Pizza</a>
            <a href="#dailymenu">DailyMenu</a>
            <a href="#connections">Connections</a>
        </nav>
        <div class="language-switcher">
            <button data-lang="en">EN</button>
            <button data-lang="hu">HU</button>
        </div>
    </header>
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    

    <footer class="border-top footer text-muted">
        <div class="container">
            &copy; 2023 - AutomixMVC - <a asp-area="" asp-controller="Home" asp-action="Privacy">Privacy</a>
        </div>
    </footer>

    <div class="up-arrow"><img src="~/Images/Icons/icon_top.png" /></div>
    
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
